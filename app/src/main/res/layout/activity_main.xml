<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center_horizontal"
    android:background="?android:attr/windowBackground"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAL Downloader"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingBottom="8dp" />

    <!-- Load XML Button -->
    <Button
        android:id="@+id/btnLoadXml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select MyAnimeList XML File"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="10dp" />

    <!-- Progress / Status Section -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Waiting for XML import..."
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <!-- Tag Management Placeholder -->
    <LinearLayout
        android:id="@+id/layoutTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btnAddTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Custom Tag"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnViewTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Tags" />
    </LinearLayout>

    <!-- Logs display -->
    <ScrollView
        android:id="@+id/scrollLogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:padding="8dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/tvLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="Log initialized...\n" />
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by Harry4004"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingTop="6dp" />
</LinearLayout>
